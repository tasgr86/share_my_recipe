<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/step_row_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp"
            android:textColor="@color/white" app:layout_constraintStart_toEndOf="@+id/step_row_count"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/small"/>


    <TextView
            android:text="10"
            android:textStyle="bold"
            android:background="@drawable/round_count"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp"
            android:id="@+id/step_row_count"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/step_row_text"
            app:layout_constraintBottom_toBottomOf="@+id/step_row_text" app:layout_constraintVertical_bias="0.0"
            android:textSize="16sp"/>


</android.support.constraint.ConstraintLayout>