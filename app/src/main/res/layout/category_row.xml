<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@color/black_light"
            android:id="@+id/category_row_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
            android:scaleType="centerCrop"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/constraintLayout2">


        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/category_row_tint"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha="66"
                android:background="@color/tint_black"/>

        <TextView
                android:text="Γλυκά"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_row_title"
                app:layout_constraintStart_toStartOf="@+id/category_row_tint"
                app:layout_constraintEnd_toEndOf="@+id/category_row_tint"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@+id/category_row_tint" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/category_row_tint"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>